@model Notes.Models.Category

@{
    ViewData["Title"] = "Create";
}

<!-- Main Content -->
<div class="main-content container">
    <h1 class="display-4 mb-1">@ViewData["Title"]</h1>
    <h4 class="form-heading mb-4">Category</h4>
    <div class="row">
        <div class="col-md-6">
            <!-- Form -->
            <form asp-action="Create">
                <!-- Field for the category name -->
                <div class="form-group mb-4">
                    <label asp-for="Name" class="control-label mb-2"></label>
                    <input asp-for="Name" class="form-control form-input" placeholder="Enter category name" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <!-- Button -->
                <div class="form-group button-area">
                    <input type="submit" value="Create" class="btn main-content-button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}