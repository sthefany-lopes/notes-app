@model Notes.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<!-- Main Content -->
<div class="main-content container">
    <h1 class="display-4 mb-1">@ViewData["Title"]</h1>
    <h4 class="form-heading mb-4">Category</h4>
    <p>Are you sure you want to delete this category?</p>
    <!-- Category Details -->
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="mb-4">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="mb-4">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <!-- Form -->
    <form asp-action="Delete" class="d-flex flex-wrap justify-content-start gap-2">
        <input type="hidden" asp-for="Id" />
        <!-- Buttons -->
        <input type="submit" value="Delete" class="btn main-content-button custom-delete-button" />
        <a asp-action="Index" class="btn main-content-button custom-back-to-list-button">Back to List</a>
    </form>
</div>